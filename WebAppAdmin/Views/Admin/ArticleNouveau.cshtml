@using ModelsCommun
@using WebAppAdmin.Views.Admin

    @model List<Produit>

<h3>
    Liste des articles

</h3>
<form asp-controller="Admin" asp-action="ArticleNouveauSend" method="post">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Produit</th>
                <th scope="col">Prix</th>
                <th scope="col">Quantité</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var produit in Model)
            {
                <tr>
                    
                        <td>@produit.ID</td>
                        <td>@produit.Nom</td>
                        <td>@produit.Prix</td>
                        <td>@produit.QuantiteDisponible</td>
                    


                </tr>
            }
        <tr>
                <td>
                    <input class="form-control form-control-sm" type="text" name="produitID" placeholder="ID" readonly>
                </td>
                <td>
                    <input class="form-control form-control-sm" type="text" name="produitNom" placeholder="Nom">
                </td>
                <td>
                    <input class="form-control form-control-sm" type="text" name="produitPrix" placeholder="Prix">
                </td>
                <td>
                    <input class="form-control form-control-sm" type="text" name="produitQuantiteDisponible" placeholder="Quantite Disponible">
                </td>
        </tr>
        
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary" style="position: relative; bottom: 10px; left: 92%;">Confirmer</button>
</form>

