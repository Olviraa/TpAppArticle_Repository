@using ModelsCommun
@using WebAppAdmin.Views.Admin

    @model List<Produit>
<a asp-controller="Admin" asp-action="AdminHome" class="btn btn-outline-dark" style="margin-bottom: 10px" title="Retour à l'accueil">Back to home</a>
<h3>
    Liste des articles    
    
</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Produit</th>
            <th scope="col">Prix</th>
            <th scope="col">Quantité</th>
            <th scope="col" width="15" style="text-align: center">Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var produit in Model)
        {            
            <tr>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.ID</td>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.Nom</td>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.Prix <i class="fa-solid fa-euro-sign"></i></td>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.QuantiteDisponible</td>
                <td style="text-align: center"><a asp-controller="Admin" asp-action="ArticleSuppression" asp-route-id="@produit.ID" type="button" class="btn btn-labeled btn-danger btn-sm" title="Supprimer article" width="15"><i class="fa-regular fa-trash-can"></i></a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Admin" asp-action="ArticleNouveau" class="btn btn-success" title="Ajouter nouveau produit"><i class="fa-solid fa-circle-plus fa-xl"></i>  Article</a>
