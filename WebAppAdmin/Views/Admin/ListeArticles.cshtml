@using ModelsCommun
@using WebAppAdmin.Views.Admin

    @model List<Produit>
<a asp-controller="Admin" asp-action="AdminHome" class="btn btn-outline-dark" style="margin-bottom: 10px" title="Retour à l'accueil'">Back to home</a>
<h3>
    Liste des articles    
    
</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Produit</th>
            <th scope="col">Prix</th>
            <th scope="col">Quantité</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var produit in Model)
        {            
            <tr>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.ID</td>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.Nom</td>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.Prix</td>
                <td onclick="window.location.href='@Url.Action("ArticleEdit", "Admin", new { id = produit.ID })';" style="cursor:pointer;">@produit.QuantiteDisponible</td>
                <td><button type="button" class="btn btn-labeled btn-danger btn-sm">❌</button></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Admin" asp-action="ArticleNouveau" class="btn btn-outline-dark" title="Ajouter nouveau produit">➕ Article</a>
